{
  "manifest_version": 2,
  
  "name": "Themewatcher",
  "description": "Watch a file to change the Firefox theme.",
  "version": "1.0.0",

  "background": {
    "scripts": ["dist/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],

  "permissions": ["theme", "nativeMessaging"]
}
